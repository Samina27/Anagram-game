<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NewActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Word to Find"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="150dp" android:layout_marginStart="150dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="150dp"
            android:layout_marginRight="150dp" android:visibility="visible" android:id="@+id/wordTv"
            android:textSize="18sp" android:textStyle="bold" android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="260dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:autofillHints="" android:layout_marginTop="240dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="180dp" app:layout_constraintBottom_toTopOf="@+id/wordTv"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="90dp"
            android:layout_marginStart="90dp" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="Validate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/validate"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="161dp"
            android:layout_marginStart="161dp"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/wordTv"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="162dp"
            android:layout_marginRight="162dp"
            android:layout_marginBottom="150dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="visible"/>
    <Button
            android:text="New Game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/new_game" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="161dp"
            android:layout_marginStart="161dp" android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/wordTv" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="162dp" android:layout_marginRight="162dp" android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toBottomOf="parent" android:visibility="visible"/>

</android.support.constraint.ConstraintLayout>