<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Wordsplay"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="150dp" android:layout_marginStart="150dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="240dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="150dp"
            android:layout_marginRight="150dp" android:visibility="visible" android:id="@+id/wordTv"
            android:textSize="18sp" android:textStyle="bold"/>
    <Button
            android:text="Let's Go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_Go" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="161dp"
            android:layout_marginStart="161dp" android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/wordTv" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="162dp" android:layout_marginRight="162dp" android:layout_marginBottom="320dp"
            app:layout_constraintBottom_toBottomOf="parent" android:visibility="visible"/>

</android.support.constraint.ConstraintLayout>